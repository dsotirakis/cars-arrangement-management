doctype html
html
  head
    title Add car
  body
    h1 Add Car
    if cars
      each car in cars
        li #{car.carName}
        li #{car.categoryName}
    script.
      
    form(method='post', action='/addEvent')
      label Event
      br
      select(id = "categ", name="categoryName", placeholder='Choose Category')
        each category in categories
          option(value=category.categoryName) #{category.categoryName}
      input(class='categ', type='datetime-local', name='startDate', placeholder='Enter start date', required='')
      input(class='categ', type='datetime-local', name='endDate', placeholder='Enter end date', required='')
      input(type='submit', value='Add Event')
